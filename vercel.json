{
    "version": 2,
    "builds": [
      {
        "src": "api/**/*.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/api/$1.js"
      },
      {
        "src": "/admin",
        "dest": "/admin.js"
      },
      {
        "src": "/(.*)",
        "dest": "/index.js"
      }
    ],
    "env": {
      "MONGODB_URI": "@mongodb-uri",
      "PORT": "3000"
    }
  }
  